<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/foodIcon"
        android:layout_width="56dp"
        android:layout_height="54dp"
        app:srcCompat="@mipmap/ingr_small"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Rutabega"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/foodIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/quickFacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="BOught on this time and blah blah also this is..."
        app:layout_constraintLeft_toRightOf="@+id/foodIcon"
        app:layout_constraintTop_toBottomOf="@+id/foodName" />
</android.support.constraint.ConstraintLayout>
